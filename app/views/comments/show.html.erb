<section class="card-comment-show">
  <p style="font-size: 16px;">以下の内容でコメントを送信しました</p>

  <p style="font-size: 20px; margin: 20px;">
    &nbsp;&nbsp;コメント:
    <strong><%= @comment.body %></strong>
  </p>
  <ul class="list-inline">
    <li><%= button_to "ショップへ戻る", shop_path(@comment.shop_id), :method => :get , :class => "btn btn-success" %></li>
    <li><%= button_to "トップ画面へ戻る", root_path, :method => :get , :class => "btn btn-info" %></li>
  </ul>
</section>
