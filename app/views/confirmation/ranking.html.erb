<h1>
  ウォークランキング&nbsp;&nbsp;&nbsp;
  <%= link_to("ポイント確認画面へ", confirmation_status_path, class: "btn btn-success", style: "color: #FFFFFF") %>
</h1>
<section class="ranking_card" style="padding: 3px 20px 20px 20px;">
  <div class="middle-card">月間ランキング</div>
  <div class="ranking_card" style="margin: 1px 40px 20px 40px;">
    <table class="table table-striped table-hover">
      <thead>
        <tr>
          <th>順位</th>
          <th>ユーザ名</th>
          <th>移動距離（km）</th>
          <th>ポイント</th>
        </tr>
      </thead>
      <tbody>
        <% @ranking_users.each.with_index(1) do |user, i|
          if(i==1) then
            record_color = "danger"
          elsif (i==2) then
            record_color = "success"
          elsif (i==3) then
            record_color = "info"
          elsif ((i==4) || (i==5)) then
            record_color = "active"
          else
            record_color = ""
          end

        %>
        <tr class="<%= record_color %>">
          <th><%= i%></th>
          <td><%= user.name %></td>
          <td><%= user.moving.round(1) %></td>
          <td><%= user.point %></td>
        </tr>
        <% end %>
      </tbody>
    </table>
  </div>
  <div class="middle-card">年間ランキング</div>
  <p style="font-size: 17px; margin-left: 30px;">
    近日公開予定
  </p>
</section>
